@using CoreApp.Entities
@model Restaurant

<div>

    <h1> Create </h1>

    <div>
        @using (Html.BeginForm()) { 

            <div>
                @Html.LabelFor(m=> m.Name)
                @Html.TextAreaFor(m=> m.Name)
            </div>
            <div>
                @Html.LabelFor(m => m.Cuisine)
                @Html.DropDownListFor(m => m.Cuisine, Html.GetEnumSelectList<CuisineType>())
            </div>

            <div>
                <input type="submit" value="Save" />
            </div>
        }
    </div>

</div>